{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "typeRoots": [
      "./node_modules/@types",
      "./backend"
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
